  <main id="main" class="main" style="height: 80% ;" >
    <div class="tab-content pt-2" id="myTabContent">
      <div class="tab-pane fade show active" id="Applicants" role="tabpanel" aria-labelledby="home-tab">
    <table class="table table-hover myTable" id="myTable">
        <thead>
          <tr>
            <th>Applicant Name</th>
            <th>Discription</th>
            <th>Status</th>
            <th>joining</th>
            <th>ending</th>
            <th>Add</th>
            <th>Delete</th>
          </tr>
        </thead>
      <tbody>
      <% for(var i=0;i<applicant.length;i++){%>
          <tr >
             <td> 
              <%= applicant[i].name %>
            </td>
           
          <td>
          
            <%=applicant[i].stream %>
          
        </td>
        <td>
          <%=applicant[i].status %>
        </td>
        <td>
          <form action="/add" method="post">
          <input type="date" name="joining">
        </td>
        <td>
          <input type="date"  name="ending">
        </td>
          <td>
          
            
              <input type="radio" name="id" value="<%= applicant[i].id %>" style="display: none;" checked>
              <button type="submit" class="btn btn-primary btn-sm">add</button>

            </form>
          </td>
          <td>
          
            <form action="/delete" method="post">
              <input type="radio" name="id" value="<%= applicant[i].id %>" style="display: none;" checked>
              <button type="submit" class="btn btn-primary btn-sm">Delete</button>

            </form>
          </td>
             
              </tr>
          
        <% } %>
      </tbody>
      </table>
    </div>
    
    <div class="tab-pane fade" id="Intern" role="tabpanel" aria-labelledby="profile-tab">
      <table class="table table-hover myTable">
        <thead>
          <tr>
            <th>Name</th>
            <th>join</th>
            <th>ID</th>
            <th>complete</th>
          </tr>
        </thead>
      <tbody>
      <% for(var i=0;i<intern.length;i++){%>
         <tr>
          <td>
          <%=  intern[i].name %>
          </td>
          <td>
            <%= intern[i].join %>
          </td>
          <td>
            <%= intern[i].id %>
          </td>
          <td>
            <form action="/complete" method="post">
              <input type="radio" name="id" value="<%= intern[i].id %>" style="display: none;" checked>
              
              <button type="submit" class="btn btn-primary btn-sm">complete</button>

            </form>
          </td>
         </tr>
           <% } %> 
          </tbody>
      </table>
    </div>
    <div class="tab-pane fade" id="AddApplicant" role="tabpanel" aria-labelledby="profile-tab">
      <form class="form-horizontal" action="/addApplicant" method="post">
        <div class="form-group">
          <label class="control-label col-sm-2" for="email"> Name:</label>
          <div class="col-sm-10">
            <input type="text" name="name" class="form-control" id="email">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="pwd">ID:</label>
          <div class="col-sm-10">
            <input type="text" name="id" class="form-control" id="pwd" placeholder="Enter ID">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="tag">Phone Number:</label>
          <div class="col-sm-10">
            <input type="text" name="phone" class="form-control" id="tag">
          </div>
        </div>



        <div class="form-group">

          <label class="control-label col-sm-2" for="files">Email:</label>
          <div class="col-sm-10">
             
            <input type="text" name="email" class="form-control">
          </div>
        </div>
          <label class="control-label col-sm-2" for="dept">Stream:</label>
          <div class="col-sm-10">
            <select id="dept" name="stream"  class="form-control">
              <option value="Web Development">Web Development</option>
              <option value="Machine Learning">Machine Learning</option>
              <option value="Fund Raising">Fund Raising</option>
            </select>
          </div>
        


        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </div>
      </form>


    </div>

